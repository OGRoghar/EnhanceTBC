{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build WoW TBC Addon",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "tools/run-busted.ps1"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Debug WoW TBC Addon",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "tools/run-busted.ps1",
        "-Coverage"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Test (Busted)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "tools/run-busted.ps1"
      ],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Test (Busted + Coverage)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "tools/run-busted.ps1",
        "-Coverage"
      ],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "EnhanceTBC: Scan",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "tools/scan.ps1"
      ],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "EnhanceTBC: Scan (Strict)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "tools/scan.ps1",
        "-Strict"
      ],
      "group": "test",
      "problemMatcher": []
    }
  ]
}
